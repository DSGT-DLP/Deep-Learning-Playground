{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-control-regex": 0,
    "react/no-unescaped-entities": 0,
    "object-shorthand": ["error", "consistent-as-needed"],
    "no-var": "error",
    "semi": "error"
  }
}
